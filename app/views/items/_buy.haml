.single_header
  %h1.single_header__logo
    = link_to image_tag("/assets/mercarilogo-f4c823301da0441f633837b7b207f4711269ff5c49e8d82f66df3324031a30cc.svg")

.main
  .main__container
    %h2.main__container__title 購入を確定しますか？
    %ul.buy_content
      %li
        .buy_content__item
          = image_tag("https://i.gzn.jp/img/2016/12/16/irasutoya-on-the-street/jitensya_cycling_man.png")
          %p.buy_content__item__name DIESEL ディーゼル 香水
          %form.buy_content__item__price
            .buy_price
              %p
                ¥ 1,999
                %span 送料込み
            .buy_price_check.clearfix
              %p 支払い金額
              %p ¥ 1,999
          %button.red_btn 購入する
      %li
        .buy_content__user_info
          %label 配送先
          %address
            〒273-0042
            %br
            千葉県 船橋市 前貝塚町316-57 サンモールA102号室
            %br
            礒田 裕光
          = link_to class: "text-right" do
            変更する
            = icon 'fas','chevron-right'
      %li
        .buy_content__credit_info
          %label 支払方法
          %p
            ************1915
            %br
            11 / 21
          = image_tag("//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3801675580")
          = link_to class: "text-right" do
            変更する
            = fa_icon 'chevron-right'

= render "devise/registrations/footer"
