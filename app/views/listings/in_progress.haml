/ 取引中一覧

.overall

  = render "items/header"

  .container.clearfix

    = render "/users/mypage_side_nav"

    .main-content

      .main-content__listing-items
        .tab-head
          出品した商品
        %ul.tabs
          %li
            %h3
              = link_to '/listings/list', class: 'non-active' do
                出品中
          %li
            %h3
              = link_to '/listings/in_progress', class: 'active' do
                取引中
          %li
            %h3
              = link_to '/listings/completed', class: 'non-active' do
                売却済

        .tab-content
          %ul.tab-transaction-now.mypage-item-list
            %li.item
              取引中の商品がありません
          %ul.tab-transaction-old.mypage-item-list.tab-pane
            %li.item-transaction

  .footer
    = render "/items/footer"

  .red-button
    = render '/items/button'
