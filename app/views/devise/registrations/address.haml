.single_header
  %h1.single_header__logo
    = link_to root_path do
      = image_tag("/assets/mercarilogo-f4c823301da0441f633837b7b207f4711269ff5c49e8d82f66df3324031a30cc.svg")
  %ol.single_header__nav-bar.signup-bar
    %li.through
      会員登録
      .progress-status
    %li.through
      電話番号認証
      .progress-status
    %li.active
      お届け先住所入力
      .progress-status
    %li
      支払い方法
      .progress-status
    %li
      完了
      .progress-status

.main
  .main__container
    %h2.main__container__title 住所入力
    .main__container__form
      %ul.default_list
        = form_for(:session, url: sign_up_credit_path) do |f|
          %li
            %label 郵便番号
            %span.required_form 必須
            = f.text_field :post_code, placeholder: "例) 1234567", id: "zip",required:""
          %li
            %label 都道府県
            %span.required_form 必須
            %br
            .prefecture_id
              .select-wrap.select-default
                = f.collection_select :prefecture_id, JpPrefecture::Prefecture.all, :code, :name,required:""
                -# = icon "fas" ,"chevron-down"
          %li
            %label 市区町村
            %span.required_form 必須
            = f.text_field :city, placeholder: "例) 横浜市緑区",id: "address", required:""
          %li
            %label 番地
            %span.required_form 必須
            = f.text_field :block, placeholder: "例) 青山1-1-1", required:""
          %li
            %label 建物
            %span.any_form 任意
            = f.text_field :building, placeholder: "例) 柳ビル103"

          %li
            = f.submit '次へ進む', class: 'red_btn'

= render "footer"
