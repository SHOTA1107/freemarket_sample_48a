.single_header
  %h1.single_header__logo
    = link_to image_tag("/assets/mercarilogo-f4c823301da0441f633837b7b207f4711269ff5c49e8d82f66df3324031a30cc.svg")
  %ol{class: "single_header__nav-bar signup-bar"}
    %li.through
      会員登録
      .progress-status
    %li.through
      電話番号認証
      .progress-status
    %li.through
      お届け先住所入力
      .progress-status
    %li.active
      支払い方法
      .progress-status
    %li
      完了
      .progress-status

.main
  .main__container
    %h2.main__container__title 支払い方法
    //pay.jpのデータを引用するため今回は簡易型
    .main__container__form
      %ul.default_list
        = form_for(:session, url: sign_up_create_path) do |f|
          %li
            %label カード番号
            %span.required_form 必須
            %input{placeholder: "半角数字のみ"}
          %li
            %label 有効期限
            %span.required_form 必須
            %br
            //active_hashを使用
            .expiration
              .select-wrap.select-wrap__month.select-default
                %select{name: "month"}
                  %option{value: ""} --
                -# = icon "fas" ,"chevron-down"
              %span 月
              .select-wrap.select-default
                %select{name: "year"}
                  %option{value: ""} --
                -# = icon "fas" ,"chevron-down"
              %span 年
          %li
            %label セキュリティーコード
            %span.required_form 必須
            %input{placeholder: "カード背面4桁もしくは3桁の番号"}
            =link_to "カード裏面の番号とは"
          %li
            = f.submit '次へ進む', class: 'red_btn'

= render "footer"
