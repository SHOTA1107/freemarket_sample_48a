.single_header
  %h1.single_header__logo
    = link_to image_tag("https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?228111635")

.main
  .main__container
    %h2.main__container__title 新規会員登録
    .main__container__form
      %ul.default_list
        %li.btn_list
          %button.email_btn
            = icon 'far' , "envelope"
            メールアドレスで登録
        %li.btn_list
          %button.facebook_btn
            = icon 'fab','facebook-square'
            Facebookで登録
        %li.btn_list
          %button.google_btn
            = icon 'fab','google'
            Googleで登録

= render "footer"
